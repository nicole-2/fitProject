<div class="coachCSS">
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <form action="/linksInventory/addInventory" method="POST">
                            <div class="form-group">
                                <input type="text" name="machineName" class="form-control" placeholder="Nombre Máquina o Producto" autofocus>
                            </div>
                            <div class="form-group">
                                <label for="category">Categorías</label>
                                <select id="category">
                                    <option>Pesas</option>
                                    <option>Máquinas</option>
                                    <option>Mancuernas</option>
                                    <option>Barras</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="number" name="quantity" rows="2" class="form-control" placeholder="Cantidad">
                            </div>
                            <div class="form-group">
                                <input type="number" name="machineWeight" class="form-control" placeholder="Peso (Si es necesario)">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block">
                                    Guardar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>